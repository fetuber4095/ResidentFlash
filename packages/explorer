try:
    import sys
    from PyQt5.QtWidgets import QApplication, QMainWindow, QTreeView, QFileSystemModel
    from PyQt5.QtCore import QModelIndex, Qt
    
    class ExplorerWindow(QMainWindow):
        def __init__(self):
            super().__init__()

            self.setWindowTitle("Stantart QExplorer")
            self.setGeometry(100, 100, 800, 600)

            self.model = QFileSystemModel()
            self.model.setRootPath("")
            
            self.treeView = QTreeView(self)
            self.treeView.setModel(self.model)
            self.treeView.setRootIndex(self.model.index(""))
            self.treeView.setColumnWidth(0, 250)
            self.treeView.expandAll()

            self.setCentralWidget(self.treeView)

    app = QApplication(sys.argv)
    window = ExplorerWindow()
    window.show(), app.exec_()

except (ModuleNotFoundError, NameError): 
    if cmd != "": print("qt-sdk: you need install 'pyqt5' python module to run this application")
    else: standart("explorer -py ispython")
