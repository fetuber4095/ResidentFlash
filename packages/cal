try:
    import sys
    from PyQt5 import QtCore, QtGui, QtWidgets
    from PyQt5.QtWidgets import QApplication, QMainWindow

    global Ui_windowApplication

    class Ui_windowApplication(object):
        def setupUi(self, windowApplication):
            windowApplication.setObjectName("windowApplication")
            windowApplication.resize(727, 324)
            self.calendarWidget = QtWidgets.QCalendarWidget(windowApplication)
            self.calendarWidget.setGeometry(QtCore.QRect(10, 10, 712, 304))
            self.calendarWidget.setObjectName("calendarWidget")

            self.retranslateUi(windowApplication)
            QtCore.QMetaObject.connectSlotsByName(windowApplication)

        def retranslateUi(self, windowApplication):
            _translate = QtCore.QCoreApplication.translate
            windowApplication.setWindowTitle(_translate("windowApplication", "Calendar"))


    class MyApplication(QMainWindow):
        def __init__(self):
            super().__init__()

            self.ui = Ui_windowApplication()
            self.ui.setupUi(self)


    app = QApplication(sys.argv)
    window = MyApplication()
    window.show(), app.exec_()

except (ModuleNotFoundError, NameError): 
    try: standart("cal -py ispython")
    except: print("qt-sdk: you need install 'pyqt5' python module to run this application")
    
